  bitmap gomixshapefilling
  wait_for_key mouse
  bitmap countdown
  delay 1000
  bitmap countdown3
  delay 1000
  bitmap countdown2
  delay 1000
  bitmap countdown1
  delay 1000
  tasklist
    filling 10
