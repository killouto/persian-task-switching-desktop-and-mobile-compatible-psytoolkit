options
  bitmapdir stimuli
  set &mixingStatus 0 # 1=pure,2=mixed
  set &CurrentTask 0
  set &previousTask 0
  fullscreen

fonts
  arial 18
  
bitmaps
  ################# for count down ### ######################
  countdown
  countdown1
  countdown2
  countdown3
  ################# for task switching ######################
  info1
  info2
  info3
  info4
  info5
  info6
  info7
  info8
  info9
  info10
  info11
  fillinginstruction
  shapeinstruction
  shape1fill1  # diamond
  shape1fill2  # diamond
  shape2fill1  # rect 2 filled circles
  shape2fill2  # rect 3 filled circles
  tooslow
  wrongkey
  frame
  gojustshape
  gojustfilling
  gomixshapefilling
  readyreal
  readytraining
  ##
  thankyou
  button_b
  button_n
  next
  back
  start

######################################################################
# task switching table
######################################################################

table shapetask
  "shape congruent   left "   shape1fill1  4 3
  "shape incongruent right"   shape2fill1  5 4
  "shape incongruent left "   shape1fill2  4 3
  "shape congruent   right"   shape2fill2  5 4

table fillingtask
  "fill  congruent   left "  shape1fill1  4 3
  "fill  incongruent left "  shape2fill1  4 3
  "fill  incongruent right"  shape1fill2  5 4
  "fill  congruent   right"  shape2fill2  5 4

######################################################################
# task switching tasks
######################################################################

task filling
  table fillingtask
  # -- for later data analysis --------
  set &CurrentTask 1
  if &CurrentTask == &previousTask
    set $taskSwitch 1
  fi
  if &CurrentTask != &previousTask
    set $taskSwitch 2
  fi
  set &previousTask &CurrentTask
  #------------------------------------
  if &CurrentTask == &previousTask
    set $taskSwitch 1
  fi
  if &CurrentTask != &previousTask
    set $taskSwitch 2
  fi
  set &previousTask &CurrentTask
  show bitmap frame              # 1
  delay 800
  show bitmap @2 0 70            # 2
  show bitmap button_b -250 100  # shown after stimulus
  show bitmap button_n  250 100
  readmouse l @4 &maxtime range 3 4
  clear 1 2 3 4
  if STATUS == WRONG
    show bitmap wrongkey       # 3
    delay 1000
    clear -1
  fi
  if STATUS == TIMEOUT
    show bitmap tooslow         # 3
    delay 1000
    clear -1
  fi
  if STATUS == WRONG || STATUS == TIMEOUT
    show bitmap fillinginstruction # 4
    delay 5000
    clear -1                        # 4
    delay 500
  fi
  save BLOCKNAME TABLEROW @1 STATUS RT &mixingStatus $taskSwitch

task shape
  table shapetask
  # -- for later data analysis --------
  set &CurrentTask 2
  if &CurrentTask == &previousTask
    set $taskSwitch 1
  fi
  if &CurrentTask != &previousTask
    set $taskSwitch 2
  fi
  set &previousTask &CurrentTask
  #------------------------------------
  show bitmap frame                # 1
  delay 800
  show bitmap @2 0 -70             # 2
  show bitmap button_b -250 100  
  show bitmap button_n  250 100
  readmouse l @4 &maxtime range 3 4
  clear 1 2 3 4
  if STATUS == WRONG
    show bitmap wrongkey       # 3
    delay 1000
    clear -1
  fi
  if STATUS == TIMEOUT
    show bitmap tooslow         # 3
    delay 1000
    clear -1
  fi
  if STATUS == WRONG || STATUS == TIMEOUT
    show bitmap shapeinstruction  # 4
    delay 5000
    clear -1
    delay 500
  fi
  save BLOCKNAME TABLEROW @1 STATUS RT &mixingStatus $taskSwitch

